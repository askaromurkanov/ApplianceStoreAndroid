<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.singInUp.SingUpFragment"
    android:background="#E9E9E9">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/logo"
            android:layout_width="115dp"
            android:layout_height="95dp"
            android:src="@drawable/logo_yellow"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="60dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="TECHNO"
            android:textColor="#E3912B"
            android:textSize="42dp"
            android:textFontWeight="700"
            android:fontFamily="@font/inter_regular"/>



        <EditText
            android:id="@+id/email"
            android:layout_marginTop="70dp"
            android:layout_width="350dp"
            android:layout_height="50dp"
            android:background="#EDC12E"
            android:layout_gravity="center_horizontal"
            android:hint="   Электронная почта"
            android:inputType="textEmailAddress"
            android:textColorHint="#EBEAEA"
            android:textColor="@color/white"
            />



        <EditText
            android:id="@+id/password"
            android:layout_marginTop="35dp"
            android:layout_width="350dp"
            android:layout_height="50dp"
            android:background="#EDC12E"
            android:textColorHint="#EBEAEA"
            android:layout_gravity="center_horizontal"
            android:inputType="textPassword"
            android:hint="   Пароль"
            />

        <Button
            android:id="@+id/login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:layout_gravity="center_horizontal"
            app:cornerRadius="20dp"
            android:text="ВОЙТИ"
            android:fontFamily="@font/inter_regular"
            android:textFontWeight="1000"
            android:textSize="20dp"
            android:backgroundTint="#E3912B"
            />

        <TextView
            android:id="@+id/toRegisterPage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Регистрация"
            android:layout_marginTop="15dp"
            android:textSize="17dp"
            android:textColor="#E4B825"
            android:layout_gravity="center_horizontal"
            />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/inter_regular"
            android:gravity="center_horizontal"
            android:text="Миллионы товаров\nвокруг"
            android:textFontWeight="500"
            android:textSize="30dp"
            android:textColor="#E4B825"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="65dp"/>



    </LinearLayout>


</FrameLayout>