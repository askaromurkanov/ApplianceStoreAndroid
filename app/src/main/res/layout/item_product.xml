<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/card_view"
        card_view:cardElevation="4dp"
        card_view:cardCornerRadius="3dp"
        card_view:cardUseCompatPadding="true"
        android:backgroundTint="#F9FBFF">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp">

                <ImageView
                    android:id="@+id/product_image"
                    android:layout_width="70dp"
                    android:layout_height="71dp"
                    android:src="@drawable/vacuum_cleaner" />

                <TextView
                    android:id="@+id/product_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/product_image"
                    android:fontFamily="@font/inter_regular"
                    android:textColor="#232222"
                    android:layout_marginLeft="5dp"
                    android:text="Пылесос"
                    android:textFontWeight="700"
                    android:textSize="13dp"
                    android:breakStrategy="simple"
                    android:maxLines="2"/>


                <TextView
                    android:id="@+id/product_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/product_name"
                    android:layout_toRightOf="@id/product_image"
                    android:fontFamily="@font/inter_regular"
                    android:text="7650с"
                    android:layout_alignLeft="@+id/product_name"
                    android:layout_alignRight="@+id/product_name"
                    android:textColor="#D53030"
                    android:textFontWeight="700"
                    android:textSize="18dp" />
            </RelativeLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>